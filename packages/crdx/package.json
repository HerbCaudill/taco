{
  "name": "@localfirst/crdx",
  "author": "herb@devresults.com",
  "version": "4.1.2",
  "license": "MIT",
  "repository": "https://github.com/local-first-web/auth/packages/crdx",
  "private": false,
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tscpaths -p tsconfig.build.json -s ./src -o ./dist --silent",
    "prepublishOnly": "yarn test && yarn build",
    "test": "node --no-warnings --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:log": "cross-env DEBUG='crdx*' DEBUG_COLORS=1 yarn test"
  },
  "dependencies": {
    "@localfirst/crypto": "^4.1.2",
    "cuid": "3.0.0",
    "debug": "4",
    "events": "3",
    "fast-memoize": "2",
    "lodash": "4"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^/test/(.*)$": "<rootDir>/src/_test/$1",
      "^/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node"
  }
}

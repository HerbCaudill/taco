{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "esnext"
  },
  "include": ["src", "@types", "../../types.js"],
  "exclude": ["src/**/*.test.ts"]
}

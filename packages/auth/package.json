{
  "name": "@localfirst/auth",
  "version": "2.0.1",
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Decentralized authentication and authorization for team collaboration",
  "repository": "http://github.com/local-first-web/auth",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "tscpaths -p tsconfig.json -s ./src -o ./dist --silent",
    "test": "node --no-warnings --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:log": "cross-env DEBUG='lf*' DEBUG_COLORS=1 yarn test",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "@changesets/changelog-github": "0",
    "@changesets/cli": "2",
    "@herbcaudill/crypto": "2",
    "@types/react": "17",
    "@types/react-dom": "17",
    "buffer": "6",
    "crdx": "0",
    "debug": "4",
    "events": "3",
    "fast-memoize": "2",
    "msgpack-lite": "0",
    "ramda": "0",
    "typescript": "4",
    "xstate": "4"
  },
  "devDependencies": {
    "@herbcaudill/tscpaths": "0",
    "@types/debug": "4",
    "@types/msgpack-lite": "0",
    "@types/ramda": "0",
    "cross-env": "6",
    "jest": "27",
    "prettier": "2",
    "ts-jest": "27",
    "typescript": "4"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "jest": {
    "transform": {},
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testEnvironment": "node"
  }
}

{
  "name": "@localfirst/auth",
  "version": "4.1.5",
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Decentralized authentication and authorization for team collaboration",
  "repository": "http://github.com/local-first-web/auth",
  "license": "MIT",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "watch": "npm-watch",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tscpaths --silent -p tsconfig.build.json -s src -o dist",
    "test": "vitest",
    "test:log": "cross-env DEBUG='lf*' DEBUG_COLORS=1 yarn test"
  },
  "watch": {
    "build": {
      "patterns": "./src/**/*",
      "extensions": [
        ".ts",
        ".tsx"
      ]
    },
    "postbuild": "./dist/**/*"
  },
  "dependencies": {
    "@localfirst/crdx": "^4.1.5",
    "@localfirst/crypto": "^4.1.5",
    "buffer": "^6.0.3",
    "debug": "^4.3.4",
    "eventemitter3": "^4.0.7",
    "fast-memoize": "^2.5.2",
    "lodash": "^4.17.21",
    "xstate": "4.26"
  }
}

{
  "name": "@localfirst/auth",
  "version": "4.0.1",
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Decentralized authentication and authorization for team collaboration",
  "repository": "http://github.com/local-first-web/auth",
  "license": "MIT",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "watch": "npm-watch",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tscpaths --silent -p tsconfig.build.json -s src -o dist",
    "test": "node --no-warnings --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:log": "cross-env DEBUG='lf*' DEBUG_COLORS=1 yarn test"
  },
  "watch": {
    "build": {
      "patterns": "./src/**/*",
      "extensions": [
        ".ts",
        ".tsx"
      ]
    },
    "postbuild": "./dist/**/*"
  },
  "dependencies": {
    "@localfirst/crdx": "^4.0.1",
    "@localfirst/crypto": "^4.0.1",
    "buffer": "^6.0.3",
    "debug": "^4.3.4",
    "eventemitter3": "^4.0.7",
    "fast-memoize": "^2.5.2",
    "lodash": "^4.17.21",
    "xstate": "4.26"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "testEnvironment": "node"
  }
}

{
  "name": "@localfirst/auth",
  "version": "2.0.1",
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Decentralized authentication and authorization for team collaboration",
  "repository": "http://github.com/local-first-web/auth",
  "license": "MIT",
  "module": "dist/auth.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "watch": "tsdx watch --tsconfig tsconfig.build.json --verbose --noClean",
    "build": "tsdx build",
    "postbuild": "tscpaths -p tsconfig.build.json -s ./src -o ./dist --silent",
    "test": "jest",
    "test:log": "cross-env DEBUG='lf*' DEBUG_COLORS=1 yarn test",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "@herbcaudill/crypto": "1",
    "buffer": "6",
    "crdx": "0",
    "debug": "4",
    "events": "3",
    "fast-memoize": "2",
    "msgpack-lite": "0",
    "ramda": "0",
    "tsdx": "0.14",
    "typescript": "4",
    "xstate": "4"
  },
  "devDependencies": {
    "@babel/core": "7",
    "@herbcaudill/tscpaths": "0",
    "@types/debug": "4",
    "@types/msgpack-lite": "0",
    "@types/ramda": "0",
    "cross-env": "6",
    "jest": "26",
    "prettier": "2",
    "ts-jest": "26",
    "typescript": "4",
    "v8-profiler-node8": "6"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  }
}

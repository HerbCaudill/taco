{
  "name": "@localfirst/auth",
  "version": "1.0.2",
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Decentralized authentication and authorization for team collaboration",
  "repository": "http://github.com/local-first-web/auth",
  "license": "MIT",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "watch": "npm-watch",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tscpaths -p tsconfig.build.json -s src -o dist",
    "test": "node --no-warnings --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:log": "cross-env DEBUG='lf*' DEBUG_COLORS=1 yarn test"
  },
  "watch": {
    "build": {
      "patterns": "./src/**/*",
      "extensions": [
        ".ts",
        ".tsx"
      ]
    },
    "postbuild": "./dist/**/*"
  },
  "dependencies": {
    "@herbcaudill/crypto": "^3.0.8",
    "buffer": "6",
    "crdx": "^3.0.8",
    "debug": "4",
    "events": "3",
    "fast-memoize": "2",
    "lodash": "4",
    "npm-watch": "^0.11.0",
    "typescript": "4",
    "xstate": "4.26"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "testEnvironment": "node"
  }
}

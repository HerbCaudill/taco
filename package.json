{
  "name": "taco-js",
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Decentralized authentication and authorization for team collaboration",
  "version": "0.1.0",
  "license": "MIT",
  "module": "dist/taco.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "barrel": "barrelsby -c ./barrelsby.json && prettier src/**/index.ts --write",
    "start": "tsdx watch",
    "build": "yarn barrel && tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "prepare": "tsdx build"
  },
  "peerDependencies": {},
  "dependencies": {
    "@stablelib/base64": "1",
    "@stablelib/utf8": "1",
    "fast-memoize": "2",
    "isomorphic-crypto": "3",
    "msgpack-lite": "0",
    "scryptsy": "2",
    "tweetnacl": "1"
  },
  "devDependencies": {
    "@types/msgpack-lite": "0",
    "@types/scryptsy": "2",
    "barrelsby": "2",
    "husky": "4",
    "tsdx": "0",
    "tslib": "1",
    "typescript": "3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}

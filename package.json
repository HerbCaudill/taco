{
  "name": "@localfirst/auth-monorepo",
  "version": "5.0.0",
  "private": true,
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Monorepo for @localfirst/auth",
  "repository": "http://github.com/local-first-web/auth",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev:demo": "pnpm -F @localfirst/auth-demo dev",
    "dev:cy:demo": "pnpm -F @localfirst/auth-demo dev:cy",
    "dev:cy": "run-p watch dev:cy:demo",
    "dev:cy:debug": "cross-env CYPRESS_REMOTE_DEBUGGING_PORT=9222 pnpm dev:cy",
    "dev": "run-p watch dev:demo",
    "dev:relay": "pnpm -F @localfirst/auth-demo dev:relay",
    "lint": "xo",
    "preinstall": "npx only-allow pnpm",
    "test": "vitest",
    "test:run": "vitest run",
    "test:log": "pnpm -F @localfirst/auth test:log",
    "watch": "pnpm -r watch",
    "prerelease": "pnpm build && pnpm test:run",
    "release": "lerna publish --no-private --yes"
  },
  "devDependencies": {
    "@herbcaudill/random": "^0.3.0",
    "@types/debug": "^4.1.7",
    "@types/libsodium-wrappers-sumo": "^0.7.5",
    "@types/lodash-es": "^4.17.11",
    "@types/node": "^18.15.10",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "lerna": "^7.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6",
    "xo": "^0.56.0"
  }
}
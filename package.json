{
  "name": "taco-js",
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "description": "Decentralized authentication and authorization for team collaboration",
  "version": "0.2.0",
  "license": "MIT",
  "module": "dist/taco.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "postbuild": "tscpaths -p tsconfig.json -s ./src -o ./dist",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "prepare": "tsdx build",
    "purge": "scripts/purge.bat"
  },
  "peerDependencies": {},
  "dependencies": {
    "@stablelib/base64": "1",
    "@stablelib/utf8": "1",
    "fast-memoize": "2",
    "json-stable-stringify": "1",
    "msgpack-lite": "0",
    "ramda": "0",
    "scryptsy": "2",
    "tweetnacl": "1",
    "xstate": "^4.11.0"
  },
  "devDependencies": {
    "@types/json-stable-stringify": "1",
    "@types/msgpack-lite": "0",
    "@types/ramda": "0",
    "@types/scryptsy": "2",
    "husky": "4",
    "prettier": "2",
    "tscpaths": "^0.0.9",
    "tsdx": "0",
    "tslib": "1",
    "typescript": "3"
  },
  "husky": {
    "hooks": {}
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "no-unused-vars": "off"
    }
  }
}
